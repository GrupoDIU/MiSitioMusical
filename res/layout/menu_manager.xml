<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuManagerActivity" 
    android:background="@color/skyblue"
    >

    <Button
        android:id="@+id/buttonVerNovedades"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonGestionarAlbumes"
        android:layout_alignBottom="@+id/buttonGestionarAlbumes"
        android:layout_alignRight="@+id/gestionarMusica"
        android:drawableTop="@drawable/icono_novedades"
        android:text="Novedades" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Bienvenido! usuario: manager"
        android:textSize="20dp" />

    <Button
        android:id="@+id/gestionarMusica"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="21dp"
        android:layout_marginTop="43dp"
        android:drawableTop="@drawable/gestionar_musica"
        android:onClick="gestionarCanciones"
        android:text="Musica" />

    <Button
        android:id="@+id/buttonVerPerfil"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gestionarMusica"
        android:layout_alignBottom="@+id/gestionarMusica"
        android:layout_alignLeft="@+id/textView1"
        android:drawableTop="@drawable/icono_perfil"
        android:text="Perfil" />

    <Button
        android:id="@+id/buttonGestionarAlbumes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonVerPerfil"
        android:layout_below="@+id/buttonVerPerfil"
        android:layout_marginTop="70dp"
        android:drawableTop="@drawable/icono_amigos"
        android:text="Amigos" />

</RelativeLayout>