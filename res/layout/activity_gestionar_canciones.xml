<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:orientation="vertical"
    tools:context=".GestionarCanciones" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            
            >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tabListaCanciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
					<View
	                        android:id="@+id/viewFirst"
	                        android:layout_width="wrap_content"
	                        android:layout_height="2dp"
	                        android:layout_marginLeft="5dp"
	                        android:layout_marginRight="5dp"
	                        android:background="#ffffff" />
                    <LinearLayout
                        android:id="@+id/LinearLayoutMusica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical" >
						
                        
                        <TextView
                                 android:id="@+id/textViewCancion"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Mil Horas"
                                 android:textAppearance="?android:attr/textAppearanceMedium"
                                 android:textColor="@color/negro" />

		               
                         
                        <LinearLayout
                            android:id="@+id/LinearLayoutDuracion"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                           	android:orientation="horizontal"
							>
                             <TextView
                                 android:id="@+id/textViewDuracionDeLaCancion"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Duracion: "
                                 android:textAppearance="?android:attr/textAppearanceMedium"
                                 android:textColor="@color/negro" />

		                    <TextView
		                        android:id="@+id/textViewDuracion"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="5:00 min"
		                        android:textAppearance="?android:attr/textAppearanceMedium" />
                            
                        </LinearLayout>
	                    
	                    <View
	                        android:id="@+id/viewFirst"
	                        android:layout_width="wrap_content"
	                        android:layout_height="2dp"
	                        android:layout_marginLeft="5dp"
	                        android:layout_marginRight="5dp"
	                        android:background="#ffffff" />

                       <TextView
                                 android:id="@+id/textViewCancion2"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Una rosa en la playa"
                                 android:textAppearance="?android:attr/textAppearanceMedium"
                                 android:textColor="@color/negro" />

		              
                       
                      <LinearLayout
                            android:id="@+id/LinearLayoutDuracion"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                           	android:orientation="horizontal"
							>
                             <TextView
                                 android:id="@+id/textViewDuracionDeLaCancion2"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Duracion: "
                                 android:textAppearance="?android:attr/textAppearanceMedium"
                                 android:textColor="@color/negro" />

		                    <TextView
		                        android:id="@+id/textViewDuracion2"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="3:40 min"
		                       
		                        android:textAppearance="?android:attr/textAppearanceMedium" />
                         
                    	</LinearLayout>
						<View
		                        android:id="@+id/viewSecond"
		                        android:layout_width="wrap_content"
		                        android:layout_height="2dp"
		                        android:layout_marginLeft="5dp"
		                        android:layout_marginRight="5dp"
		                        android:background="#ffffff" />
                </LinearLayout>
			</LinearLayout>
            
            
            <LinearLayout
                    android:id="@+id/tabListaAlbumes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
            </LinearLayout>
			
	</FrameLayout>
    </LinearLayout>
    </TabHost>

</RelativeLayout>